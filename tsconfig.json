{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "lib": ["esnext"],
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "noImplicitAny": true,
        "declaration": true,
        "skipLibCheck": true,
        "verbatimModuleSyntax": true,
        "allowImportingTsExtensions": true,
        "baseUrl": "./src",
        "outDir": "./lib"
    },
    "include": ["./src"],
    "exclude": ["node_modules", "lib"],
    "tsc-alias": {
        "resolveFullPaths": true,
        "verbose": false
    }
}
